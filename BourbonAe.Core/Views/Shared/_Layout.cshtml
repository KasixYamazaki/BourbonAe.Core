@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject Microsoft.Extensions.Configuration.IConfiguration Config
@{
    var appTitle = Config["ApplicationTitle"] ?? "BourbonAe";
    var pageTitle = ViewData["Title"] as string;
    var fullTitle = string.IsNullOrWhiteSpace(pageTitle) ? appTitle : $"{pageTitle} - {appTitle}";
}
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@fullTitle</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-..." crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="border-bottom mb-3">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">@appTitle</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">ホーム</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Aesj1110" asp-action="Index">AESJ1110</a></li>
                    </ul>
                    <div class="d-flex gap-2"></div>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="container mb-5">
        @RenderBody()
    </main>
    <footer class="mt-auto py-3 border-top bg-light">
        <div class="container small text-muted d-flex justify-content-between">
            <span>&copy; @DateTime.Now.Year @appTitle</span>
            <span>環境: @Config["SettingEnvFile"]</span>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-..." crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
